@model List<Cliente>
@using atomosDev.Models

<h1>Consulte as contas</h1>
<hr>
@foreach (Cliente clientes in Model)
{
    <h4>Titular da Conta: @clientes.nome</h4>
    <table class="table table-striped table-hover">
        <thead>
        <th scope="col">Id</th>
        <th scope="col">Tipo de Conta</th>
        <th scope="col">Agencia</th>
        <th scope="col">Conta</th>
        <th scope="col">Saldo</th>
    </thead>
    <tbody>
        @foreach (Conta contas in clientes.contas)
        {
            <tr>
                <td>@contas.id</td>
                <td>
                    @switch(contas.tipo)
                    {
                        case 0: <text>Conta Corrente</text>; break;
                        case 1: <text>Conta Poupan√ßa</text>; break;
                        case 2: <text>Conta Investimento</text>; break;
                    }
                </td>
                <td>@contas.agencia</td>
                <td>@contas.conta</td>
                <td>R$ @contas.saldo.ToString("n")</td>
            </tr>
        }
    </tbody>
    </table>

}