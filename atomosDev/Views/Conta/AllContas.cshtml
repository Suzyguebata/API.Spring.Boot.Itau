@model List<Cliente>
@using atomosDev.Models

<h3 class="display-5">Consulte as contas</h3>
<hr>
@foreach (Cliente clientes in Model)
{
    <h5 class="display-5">Titular da Conta: @clientes.nome</h5>
    <table class="table table-striped table-hover">
        <thead>
            <th scope="col" class="th-id">Id</th>
            <th scope="col" class="th-tipo">Tipo de Conta</th>
            <th scope="col" class="th-agencia">Agencia</th>
            <th scope="col" class="th-conta">Conta</th>
            <th scope="col" class="th-saldo">Saldo</th>
        </thead>
        <tbody>
            @foreach (Conta contas in clientes.contas)
            {
                <tr>
                    <td>@contas.id</td>
                    <td>
                        @switch(contas.tipo)
                        {
                            case 0: <text>Conta Corrente</text>; break;
                            case 1: <text>Conta Poupan√ßa</text>; break;
                            case 2: <text>Conta Investimento</text>; break;
                        }
                    </td>
                    <td>@contas.agencia</td>
                    <td>@contas.conta</td>
                    <td class="td-saldo">R$ @contas.saldo.ToString("n")</td>
                </tr>
            }
        </tbody>
    </table>
}